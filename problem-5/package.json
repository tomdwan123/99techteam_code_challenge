{
  "name": "resource-management",
  "version": "1.0.0",
  "description": "A comprehensive resource management system API built with Express.js and TypeScript.",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "start:local": "cp .env.local .env && ts-node src/app.ts",
    "start:docker": "cp .env.docker .env && ts-node src/app.ts",
    "dev": "cp .env.local .env && nodemon src/app.ts",
    "dev:docker": "cp .env.docker .env && nodemon src/app.ts",
    "build": "tsc",
    "migrate": "knex migrate:latest --knexfile ./src/db/knexFile.ts",
    "migrate:local": "cp .env.local .env && npm run migrate",
    "migrate:docker": "cp .env.docker .env && npm run migrate",
    "seed": "knex seed:run --knexfile ./src/db/knexFile.ts",
    "seed:local": "cp .env.local .env && npm run seed",
    "seed:docker": "cp .env.docker .env && npm run seed",
    "migrate:rollback": "knex migrate:rollback --knexfile ./src/db/knexFile.ts",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed",
    "db:reset:local": "cp .env.local .env && npm run db:reset",
    "db:reset:docker": "cp .env.docker .env && npm run db:reset",
    "test": "jest --maxWorkers=1 --detectOpenHandles --forceExit",
    "validate:openapi": "node validate-openapi.js"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv": "^16.4.7",
    "express": "^4.17.1",
    "js-yaml": "^4.1.0",
    "knex": "^3.1.0",
    "pg": "^8.13.3",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.4.0"
  },
  "author": "Test",
  "license": "MIT"
}
